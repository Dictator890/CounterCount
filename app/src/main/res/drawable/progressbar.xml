<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:shape="ring" android:useLevel="false" android:thicknessRatio="30">
            <solid android:color="@color/secondaryBlack"></solid>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate android:fromDegrees="270" android:toDegrees="270">
            <shape android:shape="ring" android:thicknessRatio="30" >
                <corners android:bottomLeftRadius="20dp" android:topLeftRadius="20dp"></corners>

                <gradient android:type="sweep" android:startColor="@color/primaryColor" android:centerColor="@color/primarymidAccent" android:endColor="@color/primaryAccent"/>


            </shape>

        </rotate>
    </item>

</layer-list>